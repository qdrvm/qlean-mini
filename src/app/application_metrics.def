/// Application-level metrics definitions

// Node build information
// On scrape; name, version
METRIC_GAUGE_LABELS(app_build_info,
                    "lean_node_info",
                    "A metric with a constant '1' value labeled by name and version",
                    ({"name", "version"}));

// Process start time
// On scrape
METRIC_GAUGE(app_process_start_time,
             "lean_node_start_time_seconds",
             "UNIX timestamp of the moment the process started");